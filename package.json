{
  "name": "quibble",
  "version": "0.1.0",
  "description": "P2P CLI chat (text, files, voice-ready) built on Hyperswarm, Autobase & Corestore",
  "type": "module",
  "main": "lib/quibble.js",
  "bin": {
    "quibble": "./bin/quibble.js"
  },
  "scripts": {
    "start": "node bin/quibble.js",
    "dev": "node ui/server.js",
    "dev:dual": "node bin/dev-dual.js",
    "dev:client-a": "PORT=3000 HOST=127.0.0.1 QUIBBLE_IDENTITY_DIR=.quibble-dev/client-a/identity QUIBBLE_UI_STORAGE=.quibble-dev/client-a/storage-ui node ui/server.js",
    "dev:client-b": "PORT=3001 HOST=127.0.0.1 QUIBBLE_IDENTITY_DIR=.quibble-dev/client-b/identity QUIBBLE_UI_STORAGE=.quibble-dev/client-b/storage-ui node ui/server.js",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./ui/public/styles.input.css -o ./ui/public/styles.css",
    "watch:css": "tailwindcss -c tailwind.config.cjs -i ./ui/public/styles.input.css -o ./ui/public/styles.css --watch",
    "quibble": "node bin/quibble.js",
    "test": "node test/local.js && node test/video-transfer.js"
  },
  "keywords": [
    "p2p",
    "chat",
    "hyperswarm",
    "autobase",
    "corestore",
    "pear",
    "bare"
  ],
  "license": "LGPL-3.0-only",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "autobase": "^7.25.1",
    "b4a": "^1.8.0",
    "bip39": "^3.1.0",
    "chalk": "^5.6.2",
    "compact-encoding": "^2.19.0",
    "compact-encoding-struct": "^1.2.0",
    "corestore": "^7.8.0",
    "hypercore": "^11.26.0",
    "hypercore-crypto": "^3.6.1",
    "hyperdht": "^6.29.0",
    "hyperswarm": "^4.17.0",
    "protomux": "^3.10.1",
    "sodium-universal": "^5.0.1",
    "ws": "^8.19.0",
    "z32": "^1.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.2.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0"
  }
}
